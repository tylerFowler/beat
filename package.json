{
  "name": "chrome-dashboard",
  "version": "0.2.0",
  "description": "A Chrome new tab page featuring HN/DN news feeds and other customizations",
  "author": "Tyler Fowler <tylerfowler.1337@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/tylerFowler/chrome-dashboard",
  "bugs": {
    "url": "https://github.com/tylerFowler/chrome-dashboard/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tylerFowler/chrome-dashboard"
  },
  "main": "lib/main.tsx",
  "scripts": {
    "build": "npx rollup -c rollup.config.js",
    "test": "npx ava",
    "lint": "npx tslint --project . --format stylish || exit 0",
    "start": "ROLLUP_WATCH=true; npx rollup -c rollup-devserver.config.js --watch",
    "build-assets": "(rm public/assets/* 2>/dev/null || true) && npx imagemin 'assets' --out-dir 'public/assets'",
    "build-dist": "NODE_ENV=production npm run build && npm run build-assets"
  },
  "ava": {
    "files": [
      "lib/*.spec.ts",
      "lib/**/*.spec.ts"
    ],
    "environmentVariables": {
      "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\"}"
    },
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "tsconfig-paths/register"
    ]
  },
  "dependencies": {
    "hex-rgb": "^4.1.0",
    "natural-scale": "^2.0.0",
    "normalize.css": "^8.0.1",
    "react": "^16.9.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.1",
    "styled-components": "^4.3.2",
    "typesafe-actions": "^4.4.2"
  },
  "devDependencies": {
    "@types/chrome": "0.0.88",
    "@types/react": "^16.9.2",
    "@types/react-addons-css-transition-group": "^15.0.5",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.2",
    "@types/styled-components": "^4.1.19",
    "ava": "^2.4.0",
    "imagemin-cli": "^5.0.0",
    "redux-devtools-extension": "^2.13.8",
    "rollup": "^1.21.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy-glob": "^0.3.1",
    "rollup-plugin-livereload": "^1.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.24.2",
    "rollup-watch": "^4.3.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
