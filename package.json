{
  "name": "chrome-dashboard",
  "description": "A Chrome new tab page featuring HN/DN news feeds and other customizations",
  "author": "Tyler Fowler <tylerfowler.1337@gmail.com>",
  "version": "0.1.0",
  "main": "lib/main.tsx",
  "scripts": {
    "build": "npx rollup -c rollup.config.js",
    "lint": "npx tslint ./lib/*** --format stylish",
    "start": "ROLLUP_WATCH=true; npx rollup -c rollup-devserver.config.js --watch",
    "build-assets": "rm public/assets/* && npx imagemin 'assets' --out-dir 'public/assets'",
    "build-dist": "NODE_ENV=production npm run build && npm run build-assets"
  },
  "dependencies": {
    "natural-scale": "^2.0.0",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "styled-components": "^4.2.1",
    "typesafe-actions": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^11.13.12",
    "@types/react": "^16.8.19",
    "@types/react-addons-css-transition-group": "^15.0.5",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "@types/styled-components": "^4.1.15",
    "imagemin-cli": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "rollup": "^1.13.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy-glob": "^0.3.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "rollup-watch": "^4.3.1",
    "tslib": "^1.9.3",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
